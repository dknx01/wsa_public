<!DOCTYPE html>
<html lang="de">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
        {% endblock %}
        {{ include('layout/tracking.html.twig') }}
        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </head>
    <body class="container-grey">

    <div class="container container-grey min-vh-100">
        <div class="row title-text">
            <div class="col-sm">
            </div>
            <div class="col-sm text-left">
                <a href="{{ path('home') }}">{{ include('wsa/Logo.html.twig') }}</a>
            </div>
            <div class="col-sm text-right">
            </div>
        </div>
        <div id="wsa wsa-board" class="Wsa-Board" data-wsa-theme="dark">
        <main>
            {% block body %}{% endblock %}
            <div id="cookie-box" class="cookie-container position-fixed bottom-0 end-0 p-3">
                <input type="checkbox" id="toggleCookie">
                <label class="cookieButton position-fixed bottom-1 end-0" for="toggleCookie"><box-icon name='fingerprint'></box-icon></label>
                <div class="cookieContent">{{ 'cookie_box.body'|trans({'{{data_privacy}}': path('dataPrivacy')})|raw }}</div>
            </div>
        </main>
        <footer class="py-4 mt-auto footer">
            <div class="container text-center">
                <div class="row">
                    <div class="col">
                        <span class="version"><i data-lucide="milestone"></i>{{ version }}</span>
                    </div>
                    <div class="col">
                        <a href="{{ path('impressum') }}">Impressum</a>
                    </div>
                    <div class="col">
                        {{ include('wsa/Partei.html.twig') }}
                    </div>
                    <div class="col-2">
                        <i data-lucide="copyright" style="width: 12px; height: 12px"></i><a href="https://github.com/dknx01/wsa_public" target="_blank" class="small text-black">dknx01/wsa_public</a>
                    </div>
                </div>
            </div>
        </footer>
        </div>
    </div>
    </body>
</html>
