{% for message in app.flashes('success') %}
    {{ _self.notification(message, 'success') }}
{% endfor %}
{% for message in app.flashes('error') %}
    {{ _self.notification(message, 'danger') }}
{% endfor %}
{% for message in app.flashes('warning') %}
    {{ _self.notification(message, 'warning') }}
{% endfor %}

{% macro notification(msg, type) %}
    <div
            data-controller="notification"
            data-notification-delay-value="5000"
            class="transition transform duration-1000 alert alert-{{ type }} alert-dismissible text-black"
            data-transition-enter-from="opacity-0 translate-x-6"
            data-transition-enter-to="opacity-100 translate-x-0"
            data-transition-leave-from="opacity-100 translate-x-0"
            data-transition-leave-to="opacity-0 translate-x-6"
            role="alert"
    >{{ msg|default }}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" data-action="notification#hide"></button>
    </div>
{% endmacro %}
